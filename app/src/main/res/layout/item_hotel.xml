<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="15dp"
    android:radius="20dp"
    app:useCompatPadding="true">

    <!-- LinearLayout untuk kontainer utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- ImageView untuk gambar hotel -->
        <ImageView
            android:id="@+id/imgHotel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/iconn"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
             />

        <!-- RelativeLayout untuk konten teks dan rating -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp">

            <!-- Nama Hotel -->
            <TextView
                android:id="@+id/tvHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Harper Purwakarta"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <!-- Rating dan Bintang -->
            <LinearLayout
                android:id="@+id/ratingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHotelName"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- RatingBar -->
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:numStars="1"
                    android:stepSize="1"
                    android:rating="1"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:layout_marginEnd="8dp"
                    android:progressDrawable="@drawable/star_rating" /> />

                <!-- Nilai Rating -->
                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/5"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
