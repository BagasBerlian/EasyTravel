<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarKulinerActivity">

    <!-- Header untuk judul -->
    <RelativeLayout
        android:id="@+id/headerLayoutKuliner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/btnBackKuliner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_button"
            android:contentDescription="Back Button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Judul di tengah -->
        <TextView
            android:id="@+id/tvTitleKuliner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Daftar Kuliner"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <!-- RecyclerView untuk grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewKuliner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayoutKuliner"
        android:layout_marginTop="16dp" />
</RelativeLayout>
